@model StokMVC.Models.Entity.tblMUSTERI
@{
    ViewBag.Title = "MusteriGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("Guncelle", "Musteri", FormMethod.Post))
{
    <h2>Müşteri Güncelleme</h2>
    <br />
    <label>Adı:</label>
    @Html.TextBoxFor(x => x.ad, new { @class = "form-control" })
    <br />
    <label>Soyadı:</label>
    @Html.TextBoxFor(x => x.soyad, new { @class = "form-control" })
    <br />
    <label>Şehir:</label>
    @Html.TextBoxFor(x => x.sehir, new { @class = "form-control" })
    <br />
    <label>Bakiye:</label>
    @Html.TextBoxFor(x => x.bakiye, new { @class = "form-control" })
    <br />
    <button class="btn btn-warning">Güncelle</button>
    @Html.HiddenFor(x => x.id)
}


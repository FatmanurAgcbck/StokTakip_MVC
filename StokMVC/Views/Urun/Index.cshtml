@using StokMVC.Models.Entity
@model List<tblURUNLER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@using(Html.BeginForm("Index", "Urun", FormMethod.Get))
            {
                <p>
                    Ürün Adı: @Html.TextBox("p");
                    <input type="submit" value="Ara"/>
                </p>
            }
<table class="table table-bordered">
    <tr>
        <th>ID </th>
        <th>ÜRÜN ADI </th>
        <th>MARKASI </th>
        <th>STOK </th>
        <th>ALIŞ FİYATI </th>
        <th>SATIŞ FİYATI </th>
        <th>KATEGORİ</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>

    @foreach (var x in Model)
    {
        <tr>
            <td>@x.id</td>
            <td>@x.ad</td>
            <td>@x.marka</td>
            <td>@x.stok</td>
            <td>@x.alisFiyat</td>
            <td>@x.satisFiyat</td>
            <td>@x.tblKATEGORI.ad</td>
            <td><a href="/Urun/Sil/@x.id" class="btn btn-danger">Sil</a></td>
            <td><a href="/Urun/UrunGetir/@x.id" class="btn btn-success">Güncelle</a></td>
        </tr>
    }


</table>

<a href="/Urun/YeniUrun" class="btn btn-primary">Yeni Ürün Girişi</a>



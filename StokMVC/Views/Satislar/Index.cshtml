@using StokMVC.Models.Entity
@model List<tblSATISLAR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>ÜRÜN</th>
        <th>PERSONEL</th>
        <th>MÜŞTERİ</th>
        <th>FİYAT</th>
        <th>TARİH</th>
        
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.id</td>
            <td>@x.tblURUNLER.ad</td>
            <td>@x.tblPERSONEL.ad @x.tblPERSONEL.soyad</td>
            <td>@x.tblMUSTERI.ad @x.tblMUSTERI.soyad </td>
            <td>@x.fiyat</td>
            <td>@x.tarih</td>
            
            
        </tr>
    }




</table>

<a href="/Satislar/YeniSatis" class=" btn btn-primary">Yeni Satış Girişi</a>

